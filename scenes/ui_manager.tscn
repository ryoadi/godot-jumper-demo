[sub_resource type="GDScript" id="GDScript_48c6h"]
resource_name = "UiManager"
script/source = "extends CanvasLayer

# UI References (set in scene)
@onready var score_label: Label = $GameUI/ScoreLabel
@onready var game_over_panel: Panel = $GameOverPanel
@onready var game_over_score_label: Label = $GameOverPanel/VBoxContainer/ScoreLabel
@onready var game_over_high_score_label: Label = $GameOverPanel/VBoxContainer/HighScoreLabel
@onready var new_high_score_label: Label = $GameOverPanel/VBoxContainer/NewHighScoreLabel
@onready var restart_button: Button = $GameOverPanel/VBoxContainer/RestartButton
@onready var menu_button: Button = $GameOverPanel/VBoxContainer/MenuButton
@onready var start_panel: Panel = $StartPanel
@onready var start_button: Button = $StartPanel/VBoxContainer/StartButton
@onready var title_label: Label = $StartPanel/VBoxContainer/TitleLabel
@onready var high_score_display: Label = $StartPanel/VBoxContainer/HighScoreLabel

# Reference to game manager
var game_manager: Node

func _ready() -> void:
	# Hide game UI initially
	if score_label:
		score_label.visible = false
	if game_over_panel:
		game_over_panel.visible = false
	if start_panel:
		start_panel.visible = true
	
	# Connect buttons
	if restart_button:
		restart_button.pressed.connect(_on_restart_pressed)
	if menu_button:
		menu_button.pressed.connect(_on_menu_pressed)
	if start_button:
		start_button.pressed.connect(_on_start_pressed)

func show_start_menu(high_score: float) -> void:
	if start_panel:
		start_panel.visible = true
	if score_label:
		score_label.visible = false
	if game_over_panel:
		game_over_panel.visible = false
	
	# Display high score on menu
	if high_score_display and game_manager:
		high_score_display.text = \"High Score: \" + game_manager.format_height(high_score)

func show_game_ui() -> void:
	if start_panel:
		start_panel.visible = false
	if score_label:
		score_label.visible = true
		score_label.text = \"0.0 m\"
	if game_over_panel:
		game_over_panel.visible = false

func update_score(height: float) -> void:
	if score_label and game_manager:
		score_label.text = game_manager.format_height(height)

func show_game_over(final_height: float, high_score: float, is_new_high_score: bool) -> void:
	if game_over_panel:
		game_over_panel.visible = true
	if score_label:
		score_label.visible = false
	
	# Update game over labels
	if game_over_score_label and game_manager:
		game_over_score_label.text = \"Height: \" + game_manager.format_height(final_height)
	
	if game_over_high_score_label and game_manager:
		game_over_high_score_label.text = \"Best: \" + game_manager.format_height(high_score)
	
	# Show \"NEW HIGH SCORE!\" if applicable
	if new_high_score_label:
		new_high_score_label.visible = is_new_high_score

func _on_start_pressed() -> void:
	if game_manager:
		game_manager.start_game()

func _on_restart_pressed() -> void:
	if game_manager:
		game_manager.restart_game()

func _on_menu_pressed() -> void:
	if game_manager:
		game_manager.return_to_menu()
		show_start_menu(game_manager.get_high_score())
"

